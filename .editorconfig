# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

# 2 space indentation
[*.{rb,erb}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.php]
indent_style = tab
indent_size = 4
#trim_trailing_whitespace = true

[*.html]
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.md]
indent_style = tab
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

